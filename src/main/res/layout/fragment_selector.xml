<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SelectorFragment">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:id="@+id/structureSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/selector_recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <ImageView
        android:id="@+id/demolishImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/hammer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/selector_recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/structureSelector"




        />

    <Button
        android:id="@+id/detailsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/selector_recyclerView"
        app:layout_constraintRight_toRightOf="parent"

        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/selector_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/structureSelector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        >



    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>